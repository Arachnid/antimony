import fab

title('Reflect (Z)')

input('_x', float)
input('_y', float)
input('z0', float)

input('shape', fab.types.Shape)
output('out', fab.shapes.reflect_z(shape, z0))

# UI
fab.ui.wireframe([
    (_x + 1, _y - 1, z0),
    (_x + 1, _y + 1, z0),
    (_x - 1, _y + 1, z0),
    (_x - 1, _y - 1, z0)], color=fab.color.teal, close=True)

fab.ui.point(_x, _y, z0, color=fab.color.teal)

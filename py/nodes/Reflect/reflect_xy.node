import fab

title('Reflect (XY)')

input('x0',float,0)
input('y0',float,0)
input('_z', float, 0)

input('shape', fab.types.Shape)
output('out', fab.shapes.reflect_xy(shape, x0, y0))

# UI
fab.ui.wireframe([
    (x0 - 0.7, y0 - 0.7, _z - 1),
    (x0 + 0.7, y0 + 0.7, _z - 1),
    (x0 + 0.7, y0 + 0.7, _z + 1),
    (x0 - 0.7, y0 - 0.7, _z + 1)], color=fab.color.teal, close=True)
fab.ui.point(x0, y0, _z, color=fab.color.teal)

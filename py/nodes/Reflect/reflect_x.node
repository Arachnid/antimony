import fab

title('Reflect (X)')

input('x0', float)
input('_y', float)
input('_z', float)

input('shape', fab.types.Shape)
output('out', fab.shapes.reflect_x(shape, x0))

# UI
fab.ui.wireframe([
    (x0, _y - 1, _z + 1),
    (x0, _y + 1, _z + 1),
    (x0, _y + 1, _z - 1),
    (x0, _y - 1, _z - 1)], color=fab.color.teal, close=True)

fab.ui.point(x0, _y, _z, color=fab.color.teal)

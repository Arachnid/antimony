import fab

title('Text')

input('x', float)
input('y', float)
input('text', str)
input('scale', float, 1)

output('shape', fab.shapes.text(text, x, y, scale))

# UI
fab.ui.point(x, y, 0)
def drag_scale(this, x, y, z):
    this.scale = y - this.y
fab.ui.point(x, y + scale, 0, drag=drag_scale)
fab.ui.wireframe([(x, y, 0), (x, y+scale, 0)])

import fab

title('origin xy')

def origin_xy(part,x0,y0):
   from fab.types import Shape, Transform
   # X' = X-x0
   # Y' = Y-y0
   # X = X'+x0
   # Y = Y'+y0
   return part.map(Transform(
      '-Xf%(x0)g' % locals(),
      '-Yf%(y0)g' % locals(),
      '+f%(x0)gX' % locals(),
      '+f%(y0)gY' % locals()))

input('x0',float,1)
input('y0',float,1)

input('shape',fab.types.Shape)
output('transform',origin_xy(shape,x0,y0))

